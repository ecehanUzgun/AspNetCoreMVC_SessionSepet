@model AspNetCoreMVC_Sepet.Models.Context.Order
@{
    ViewData["Title"] = "CompleteOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sipariş Bilgileri</h1>
<form asp-action="CompleteOrder" method="post">
    <div class="form-group">
        <label for="ShipName">Alıcı Adı</label>
        <input type="text" class="form-control" id="ShipName" name="ShipName" required/>
    </div>
    <div class="form-group">
        <label for="ShipAddress">Adres</label>
        <input type="text" class="form-control" id="ShipAddress" name="ShipAddress" required/>
    </div>
    <div class="form-group">
        <label for="ShipCity">Şehir</label>
        <input type="text" class="form-control" id="ShipCity" name="ShipCity" required/>
    </div>
    <div class="form-group">
        <label for="ShipPostalCode">Posta Kodu</label>
        <input type="text" class="form-control" id="ShipPostalCode" name="ShipPostalCode" required/>
    </div>

    <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
</form>
 